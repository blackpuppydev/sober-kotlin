        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanitregular"
                android:buttonTint="#FFD600"
                android:text="ชาย" />

            <RadioButton
                android:id="@+id/woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/man"
                android:buttonTint="#FFD600"
                android:fontFamily="@font/kanitregular"
                android:text="หญิง" />

            <RadioButton
                android:id="@+id/other_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/woman"
                android:buttonTint="#FFD600"
                android:fontFamily="@font/kanitregular"
                android:text="อื่นๆ" />

            <RadioButton
                android:id="@+id/notSay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/other"
                android:buttonTint="#FFD600"
                android:fontFamily="@font/kanitregular"
                android:text="ไม่ระบุ" />

        </RadioGroup>


