<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.profile.StartProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back_fm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_back_circle" />

            <ImageButton
                android:id="@+id/component_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_component_1" />


        </RelativeLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/kanitlight"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="กรอกประวัติผู้เข้ารับการทดสอบ" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_card" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ed_name"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/kanitlight"
                android:textColor="@color/black"
                android:text="ชื่อผู้ได้รับการทดสอบ" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_text_box"
                android:fontFamily="@font/kanitregular"
                android:hint="ชื่อ-นามสกุล"
                android:padding="5dp"
                android:textAlignment="textStart"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_name"
                android:layout_margin="5dp"
                android:fontFamily="@font/kanitlightitalic"
                android:textColor="#FF0000"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10dp" />


            <RelativeLayout
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/alert"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_button2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/kanitregular"
                    android:text="ต่อไป"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

</FrameLayout>